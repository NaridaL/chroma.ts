{
	"name": "chroma.ts",
	"version": "1.0.10",
	"description": "",
	"main": "dist/index.umd.js",
	"module": "dist/index.es.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"clean": "rimraf dist out",
		"test": "cross-env TS_NODE_PROJECT=test/tsconfig.json mocha --ui tdd --require ts-node/register test/**/*.test.ts",
		"test:src": "cross-env TEST_SRC=./src/index.ts TS_NODE_PROJECT=test/tsconfig.json npm run test --",
		"test:min": "cross-env TEST_SRC=./dist/index.umd.min.js TS_NODE_PROJECT=test/tsconfig.json npm run test --",
		"coverage": "nyc --reporter=lcov --extension .ts npm run test",
		"report": "nyc report --extension .ts",
		"build": "rollup -c",
		"test:ci": "npm-run-all prettier lint build test test:min docs && git diff --exit-code",
		"preversion": "npm run test:ci",
		"lint": "tslint --project .",
		"prettier": "prettier --list-different --write src/**/*.ts test/**/*.ts",
		"docs": "ts-node --transpile-only --compiler-options \"{\\\"module\\\":\\\"commonjs\\\"}\" ./gendoc.tsx",
		"docs:watch": "nodemon -w ./gendoc.tsx -w ./src/index.ts -x ts-node --transpile-only ./gendoc.tsx"
	},
	"prettier": {
		"useTabs": true,
		"semi": false,
		"tabWidth": 4,
		"printWidth": 120,
		"trailingComma": "all"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {},
	"umdGlobal": "chroma",
	"devDependencies": {
		"@rollup/plugin-typescript": "^8.1.0",
		"@types/filesize": "^5.0.0",
		"@types/mocha": "^8.2.0",
		"@types/node": "^14.14.14",
		"@types/react": "^17.0.0",
		"@types/react-dom": "^17.0.0",
		"@types/tmp": "0.2.0",
		"cross-env": "^7.0.3",
		"filesize": "^6.1.0",
		"mocha": "^8.2.1",
		"mock-require": "^3.0.3",
		"nodemon": "^2.0.6",
		"npm-run-all": "^4.1.5",
		"nyc": "^15.1.0",
		"prettier": "^2.2.1",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-markdown": "^5.0.3",
		"rimraf": "^3.0.2",
		"rollup": "^2.35.1",
		"rollup-plugin-terser": "^7.0.2",
		"svg-to-dataurl": "^1.0.0",
		"terser": "^5.5.1",
		"tmp": "0.2.1",
		"ts-node": "^9.1.1",
		"ts3dutils": "^1.1.5",
		"tslint": "^6.1.3",
		"tslint-config-prettier": "^1.18.0",
		"turndown": "^7.0.0",
		"turndown-plugin-gfm": "^1.0.2",
		"typedoc": "^0.19.2",
		"typescript": "^4.1.3",
		"unescape": "^1.0.1"
	}
}
