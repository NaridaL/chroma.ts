{
	"name": "chroma.ts",
	"version": "1.0.0",
	"description": "",
	"main": "chroma.min.js",
	"types": "./src/index.d.ts",
	"scripts": {
		"test": "vows --dot-matrix",
		"coverage": "nyc --reporter=lcov --extension .ts npm run mocha",
		"report": "nyc report --extension .ts",
		"tsickle": "tsickle --externs=externs.json",
		"closure": "java -jar ./node_modules/google-closure-compiler/compiler.jar --js src/index.js --js_output_file ./closure.js -O SIMPLE_OPTIMIZATIONS -W VERBOSE --process_common_js_modules",
		"minify": "uglifyjs ./src/index.js -o ./chroma.min.js -c passes=5,unsafe=true,ecma=7 --toplevel -m --mangle-props regex=/^_/",
		"tsc": "tsc",
		"build": "npm-run-all tsc minify",
		"mocha": "mocha --ui tdd --require ts-node/register test/**/*.test.ts ",
		"clean:rpt2": "shx rm -r .rpt2_cache src/.rpt2_cache",
		"spaces:watch": "npm run clean:rpt2 & rollup -w -c spaces/rollup.config.js"
	},
	"prettier": {
		"useTabs": true,
		"semi": false,
		"tabWidth": 4,
		"printWidth": 120,
		"trailingComma": "all"
	},
	"author": "",
	"license": "ISC",
