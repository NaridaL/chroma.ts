{
	"name": "chroma.ts",
	"version": "1.0.9",
	"description": "",
	"main": "dist/index.umd.js",
	"module": "dist/index.module.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"test": "cross-env TS_NODE_PROJECT=test/tsconfig.json mocha --ui tdd --require ts-node/register test/**/*.test.ts",
		"test:src": "cross-env TEST_SRC=./src/index.ts TS_NODE_PROJECT=test/tsconfig.json npm run test --",
		"test:min": "cross-env TEST_SRC=./dist/index.umd.min.js TS_NODE_PROJECT=test/tsconfig.json npm run test --",
		"coverage": "nyc --reporter=lcov --extension .ts npm run test",
		"report": "nyc report --extension .ts",
		"rollup": "rollup -c",
		"build": "npm-run-all rollup",
		"test:ci": "npm-run-all prettier lint build test test:min docs && git diff --exit-code",
		"preversion": "npm run test:ci",
		"lint": "tslint --project .",
		"prettier": "prettier --list-different --write src/**/*.ts test/**/*.ts",
		"docs": "ts-node --transpile-only ./gendoc.tsx",
		"docs:watch": "nodemon -w ./gendoc.tsx -w ./src/index.ts -x ts-node --transpile-only ./gendoc.tsx"
	},
	"prettier": {
		"useTabs": true,
		"semi": false,
		"tabWidth": 4,
		"printWidth": 120,
		"trailingComma": "all"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {},
	"devDependencies": {
		"@types/filesize": "^5.0.0",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.1",
		"@types/react": "^16.9.34",
		"@types/react-dom": "^16.9.6",
		"@types/tmp": "0.1.0",
		"cross-env": "^7.0.2",
		"filesize": "^6.1.0",
		"mocha": "^7.1.1",
		"mock-require": "^3.0.3",
		"nodemon": "^2.0.3",
		"npm-run-all": "^4.1.5",
		"nyc": "^15.0.1",
		"prettier": "^2.0.4",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-markdown": "^4.3.1",
		"rollup": "^2.6.0",
		"rollup-plugin-node-resolve": "^5.2.0",
		"rollup-plugin-replace": "^2.2.0",
		"rollup-plugin-sourcemaps": "^0.5.0",
		"rollup-plugin-terser": "^5.3.0",
		"rollup-plugin-typescript": "^1.0.1",
		"rollup-plugin-typescript2": "^0.27.0",
		"svg-to-dataurl": "^1.0.0",
		"terser": "^4.6.11",
		"tmp": "0.1.0",
		"ts-node": "^8.8.2",
		"ts3dutils": "^0.3.0",
		"tslint": "^6.1.1",
		"tslint-config-prettier": "^1.18.0",
		"turndown": "^6.0.0",
		"turndown-plugin-gfm": "^1.0.2",
		"typedoc": "^0.17.4",
		"typescript": "^3.8.3",
		"unescape": "^1.0.1"
	}
}
