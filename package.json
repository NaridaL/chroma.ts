{
	"name": "chroma.ts",
	"version": "1.0.0",
	"description": "",
	"main": "dist/index.umd.js",
	"types": "src/index.ts",
	"scripts": {
		"test": "mocha --ui tdd --require ts-node/register test/**/*.test.ts",
		"test:src": "cross-env TEST_SRC=1 cross-env TS_NODE_TRANSPILE_ONLY=1 npm run test",
		"coverage": "nyc --reporter=lcov --extension .ts npm run test",
		"report": "nyc report --extension .ts",
		"rollup": "rollup -c",
		"tsc:cjs": "tsc --module commonjs --outDir dist && shx mv dist/index.js dist/index.out/cjs/index.js dist/index.cjs.js",
		"build": "npm-run-all rollup",
		"clean:rpt2": "shx rm -rf .rpt2_cache src/.rpt2_cache",
		"spaces:watch": "npm run clean:rpt2 & rollup -w -c spaces/rollup.config.js",
		"spaces:build": "npm run clean:rpt2 & rollup -c spaces/rollup.config.js --environment BUILD:production",
		"ci": "npm-run-all prettier lint build test",
		"lint": "tslint --project .",
		"prettier": "prettier --list-different src/**/*.ts test/**/*.ts",
		"docs": "ts-node --transpileOnly  ./gendoc.tsx",
		"docs:watch": "nodemon -w ./gendoc.tsx -w ./src/index.ts -x ts-node --transpileOnly  ./gendoc.tsx"
	},
	"prettier": {
		"useTabs": true,
		"semi": false,
		"tabWidth": 4,
		"printWidth": 120,
		"trailingComma": "all"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@types/lodash.memoize": "^4.1.4",
		"atob": "^2.1.2",
		"btoa": "^1.2.1",
		"lodash.memoize": "^4.1.2",
		"rollup-plugin-analyzer": "^2.1.0"
	},
	"devDependencies": {
		"@types/chai": "^4.1.5",
		"@types/classnames": "^2.2.6",
		"@types/filesize": "^3.6.0",
		"@types/mocha": "^5.2.5",
		"@types/node": "^10.10.1",
		"@types/react": "^16.4.14",
		"@types/react-dom": "^16.0.7",
		"@types/tmp": "0.0.33",
		"chai": "^4.1.2",
		"classnames": "^2.2.6",
		"coffee-script": "^1.12.7",
		"cross-env": "^5.2.0",
		"es6-shim": "^0.35.3",
		"filesize": "^3.6.1",
		"istanbul": "^0.4.5",
		"javasetmap.ts": "^1.1.0",
		"mocha": "^5.2.0",
		"mock-require": "^3.0.2",
		"nodemon": "^1.18.4",
		"npm-run-all": "^4.1.3",
		"nyc": "^13.0.1",
		"prettier": "^1.14.3",
		"react": "^16.5.2",
		"react-dom": "^16.5.2",
		"react-markdown": "^3.6.0",
		"rollup": "^0.66.1",
		"rollup-plugin-commonjs": "^9.1.8",
		"rollup-plugin-glsl": "^1.2.0",
		"rollup-plugin-livereload": "^0.6.0",
		"rollup-plugin-minify": "^1.0.3",
		"rollup-plugin-node-resolve": "^3.4.0",
		"rollup-plugin-replace": "^2.0.0",
		"rollup-plugin-serve": "^0.6.0",
		"rollup-plugin-sourcemaps": "^0.4.2",
		"rollup-plugin-terser": "^3.0.0",
		"rollup-plugin-typescript": "^1.0.0",
		"rollup-plugin-typescript2": "^0.17.0",
		"shx": "^0.3.2",
		"svg-to-dataurl": "^1.0.0",
		"terser": "^3.8.2",
		"tmp": "0.0.33",
		"ts-node": "^7.0.1",
		"ts-node-dev": "^1.0.0-pre.30",
		"tslint": "^5.11.0",
		"tslint-config-prettier": "^1.15.0",
		"turndown": "^5.0.1",
		"turndown-plugin-gfm": "^1.0.2",
		"typedoc": "^0.12.0",
		"typedoc-plugin-markdown": "^1.1.15",
		"typescript": "^3.0.3",
		"uglify-es": "^3.3.9",
