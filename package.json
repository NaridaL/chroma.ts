{
	"name": "chroma.ts",
	"version": "1.0.0-beta",
	"description": "",
	"main": "dist/index.umd.js",
	"module": "dist/index.module.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"test": "cross-env TS_NODE_PROJECT=test/tsconfig.json mocha --ui tdd --require ts-node/register test/**/*.test.ts",
		"test:src": "cross-env TEST_SRC=./src/index.ts TS_NODE_PROJECT=test/tsconfig.json npm run test --",
		"test:min": "cross-env TEST_SRC=./dist/index.umd.min.js TS_NODE_PROJECT=test/tsconfig.json npm run test --",
		"coverage": "nyc --reporter=lcov --extension .ts npm run test",
		"report": "nyc report --extension .ts",
		"rollup": "rollup -c",
		"build": "npm-run-all rollup",
		"test:ci": "npm-run-all prettier lint build test test:min docs && git diff --exit-code",
		"preversion": "npm run test:ci",
		"lint": "tslint --project .",
		"prettier": "prettier --list-different --write src/**/*.ts test/**/*.ts",
		"docs": "ts-node --transpileOnly  ./gendoc.tsx",
		"docs:watch": "nodemon -w ./gendoc.tsx -w ./src/index.ts -x ts-node --transpileOnly  ./gendoc.tsx"
	},
	"prettier": {
		"useTabs": true,
		"semi": false,
		"tabWidth": 4,
		"printWidth": 120,
		"trailingComma": "all"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {},
	"devDependencies": {
		"@types/filesize": "^3.6.0",
		"@types/mocha": "^5.2.5",
		"@types/node": "^10.11.0",
		"@types/react": "^16.4.14",
		"@types/react-dom": "^16.0.7",
		"@types/tmp": "0.0.33",
		"cross-env": "^5.2.0",
		"filesize": "^3.6.1",
		"istanbul": "^0.4.5",
		"mocha": "^5.2.0",
		"mock-require": "^3.0.2",
		"nodemon": "^1.18.4",
		"npm-run-all": "^4.1.3",
		"nyc": "^13.0.1",
		"prettier": "^1.14.3",
		"react": "^16.5.2",
		"react-dom": "^16.5.2",
		"react-markdown": "^3.6.0",
		"rollup": "^0.66.2",
		"rollup-plugin-node-resolve": "^3.4.0",
		"rollup-plugin-replace": "^2.0.0",
		"rollup-plugin-sourcemaps": "^0.4.2",
		"rollup-plugin-terser": "^3.0.0",
		"rollup-plugin-typescript": "^1.0.0",
		"rollup-plugin-typescript2": "^0.17.0",
		"svg-to-dataurl": "^1.0.0",
		"terser": "^3.8.2",
		"tmp": "0.0.33",
		"ts-node": "^7.0.1",
		"ts3dutils": "^0.2.1",
		"tslint": "^5.11.0",
		"tslint-config-prettier": "^1.15.0",
		"turndown": "^5.0.1",
		"turndown-plugin-gfm": "^1.0.2",
		"typedoc": "^0.12.0",
		"typescript": "^3.0.3",
		"unescape": "^1.0.1"
	}
